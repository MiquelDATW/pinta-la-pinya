<odoo>
    <data>

        <!-- Top menu item -->
        <menuitem
            id="menu_pinya_root"
            name="Pinta la Pinya"
            groups="base.group_user"
            web_icon="pinta_la_pinya,static/description/icon.png"
            sequence="70"/>

        <record id="action_pinta_la_pinya_actuacions" model="ir.actions.act_window">
            <field name="name">Actuacions</field>
            <field name="res_model">pinya.actuacio</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipus', '=', 'actuacio')]</field>
            <field name="context">{'tipus': 'actuacio'}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Feu clic per afegir una nova actuació.
              </p><p>
                Amb una vista ràpida a la pantalla d'actuacions podrà trobar fàcilment
                tota la informació que necessite sobre cada actuació: data, lloc,
                categoria, número de figures, etc...
              </p>
            </field>
        </record>

        <record id="action_pinta_la_pinya_assajos" model="ir.actions.act_window">
            <field name="name">Assajos</field>
            <field name="res_model">pinya.actuacio</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipus', '=', 'assaig')]</field>
            <field name="context">{'tipus': 'assaig'}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Feu clic per afegir un nou assaig.
              </p><p>
                Amb una vista ràpida a la pantalla d'assajos podrà trobar fàcilment
                tota la informació que necessite sobre cada assaig: data, lloc,
                categoria, número de figures, etc...
              </p>
            </field>
        </record>

        <record id="action_pinta_la_pinya_muixeranga" model="ir.actions.act_window">
            <field name="name">Muixerangues</field>
            <field name="res_model">pinya.muixeranga</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="view_muixeranga_tree_all"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Feu clic per afegir una nova muixeranga.
              </p><p>
                Amb una vista ràpida a la pantalla de muixerangues podrà trobar fàcilment
                tota la informació que necessite sobre cada muixeranga.
              </p>
            </field>
        </record>

        <record id="action_pinta_la_pinya_plantilla" model="ir.actions.act_window">
            <field name="name">Plantilla</field>
            <field name="res_model">pinya.plantilla</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="view_plantilla_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Feu clic per afegir una nova plantilla al repertori de figures.
              </p><p>
                Amb una vista ràpida a la pantalla de la plantilla podrà trobar fàcilment
                tota la informació que necessite sobre cada figura de la plantilla.
              </p>
            </field>
        </record>

        <record id="action_pinta_la_pinya_membres" model="ir.actions.act_window">
            <field name="name">Membres</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('muixeranguera', '=', True)]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="hr_employee_membre_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Feu clic per afegir un nou muixeranguer.
              </p><p>
                Amb una vista ràpida a la pantalla de muixeranguers podrà trobar fàcilment
                tota la informació que necessite sobre cada membre.
              </p>
            </field>
        </record>

        <record id="action_pinta_la_pinya_posicions" model="ir.actions.act_window">
            <field name="name">Posicions</field>
            <field name="res_model">hr.skill</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_pinta_la_pinya_muixeranga_pinya_all" model="ir.actions.act_window">
            <field name="name">Pinya de Muixeranga</field>
            <field name="res_model">pinya.muixeranga.pinya</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('muixeranga_state', '!=', 'cancel')]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="view_muixeranga_pinya_tree_all"/>
        </record>

        <record id="action_pinta_la_pinya_muixeranga_tronc_all" model="ir.actions.act_window">
            <field name="name">Tronc de Muixeranga</field>
            <field name="res_model">pinya.muixeranga.tronc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('muixeranga_state', '!=', 'cancel')]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="view_muixeranga_tronc_tree_all"/>
        </record>

        <menuitem
            id="menu_pinta_la_pinya"
            name="Pinta la Pinya"
            parent="menu_pinya_root"
            sequence="1"/>

        <menuitem
            id="menu_pinta_la_pinya_actuacions"
            action="action_pinta_la_pinya_actuacions"
            parent="menu_pinta_la_pinya"
            sequence="10"/>

        <menuitem
            id="menu_pinta_la_pinya_assajos"
            action="action_pinta_la_pinya_assajos"
            parent="menu_pinta_la_pinya"
            sequence="20"/>

        <menuitem
            id="menu_pinta_la_muixeranga"
            name="Muixeranga"
            parent="menu_pinya_root"
            sequence="2"/>

        <menuitem
            id="menu_pinta_la_pinya_muixeranga"
            action="action_pinta_la_pinya_muixeranga"
            parent="menu_pinta_la_muixeranga"
            sequence="10"/>

        <menuitem
            id="menu_pinta_la_pinya_plantilla"
            action="action_pinta_la_pinya_plantilla"
            parent="menu_pinta_la_muixeranga"
            sequence="20"/>

        <menuitem
            id="menu_pinta_la_membre"
            name="Membres"
            parent="menu_pinya_root"
            sequence="3"/>

        <menuitem
            id="menu_pinta_la_pinya_membres"
            action="action_pinta_la_pinya_membres"
            parent="menu_pinta_la_membre"
            sequence="10"/>

        <menuitem
            id="menu_pinta_la_configuracio"
            name="Posicions"
            parent="menu_pinya_root"
            sequence="100"/>

        <menuitem
            id="menu_pinta_la_pinya_posicions"
            action="action_pinta_la_pinya_posicions"
            parent="menu_pinta_la_configuracio"
            sequence="10"/>

        <menuitem
            id="menu_pinta_la_tecnica"
            name="Tècnica"
            parent="menu_pinya_root"
            sequence="4"/>

        <menuitem
            id="menu_pinta_la_pinya_muixeranga_pinya"
            action="action_pinta_la_pinya_muixeranga_pinya_all"
            parent="menu_pinta_la_tecnica"
            sequence="10"/>

        <menuitem
            id="menu_pinta_la_pinya_muixeranga_tronc"
            action="action_pinta_la_pinya_muixeranga_tronc_all"
            parent="menu_pinta_la_tecnica"
            sequence="20"/>
    </data>
</odoo>

<odoo>
    <data>
        <record id="view_pinya_form" model="ir.ui.view">
            <field name="name">pinya.pinya.form</field>
            <field name="model">pinya.pinya</field>
            <field name="arch" type="xml">
                <form string="Pinya">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                        </div>
                        <group name="pinya">
                            <field name="muixeranga_id" invisible="1"/>
                            <field name="plantilla" invisible="1"/>
                            <field name="cordo"/>
                            <field name="rengles"/>
                            <field name="persones"/>
                            <field name="membre_ids"
                                   attrs="{'invisible': [('plantilla', '=', True)]}"/>
                        </group>
                        <group name="posicio" string="Posicions">
                            <field name="posicio_ids" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pinya_tree" model="ir.ui.view">
            <field name="name">pinya.pinya.tree</field>
            <field name="model">pinya.pinya</field>
            <field name="arch" type="xml">
                <tree string="Pinya">
                    <field name="cordo"/>
                    <field name="rengles"/>
                    <field name="persones"/>
                    <field name="posicio_ids" widget="many2many_tags"/>
                    <field name="membre_ids"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

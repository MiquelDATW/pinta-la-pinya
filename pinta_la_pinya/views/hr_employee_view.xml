<odoo>
    <data>

        <record id="view_employee_membre_form" model="ir.ui.view">
            <field name="name">hr.employee.membre.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <group>
                        <group name="informacio">
                            <field name="muixeranguera"/>
                            <field name="data_inscripcio"/>
                            <field name="mesos_inscrit"/>
                            <field name="altres_noms"/>
                        </group>
                        <group name="mesures">
                            <label for="alsada_cap" string="Alçada"/>
                            <div>
                                <field name="alsada_cap" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="alsada_muscle" string="Alçada del muscle"/>
                            <div>
                                <field name="alsada_muscle" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="alsada_bras" string="Alçada dels braços"/>
                            <div>
                                <field name="alsada_bras" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="pes" string="Pes"/>
                            <div>
                                <field name="pes" nolabel="1" class="oe_inline"/> kg
                            </div>
                        </group>
                        <field name="notes" string="Altra informació" placeholder="Altra informació..."/>
                    </group>
                </field>
                <page name="public" position="before">
                    <page name="habilitats" string="Habilitats">
                        <group name="habilitats">
                            <field name="employee_skill_ids" nolabel="1">
                                <tree>
                                    <field name="skill_id"/>
                                    <field name="level" widget="priority"/>
                                    <field name="count_total"/>
                                    <field name="count_sismesos"/>
                                </tree>
                                <form string="Posicions nivell">
                                    <header>
                                    </header>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="employee_id"/>
                                                <field name="skill_id"/>
                                                <field name="level"/>
                                            </group>
                                            <group>
                                                <field name="count_total"/>
                                                <field name="count_sismesos"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </page>
                    <page name="tronc" string="Troncs">
                       <group name="tronc">
                            <field name="muixeranga_tronc_ids" nolabel="1">
                                <tree string="Tronc de muixeranga">
                                    <field name="name"/>
                                    <field name="posicio_id"/>
                                    <field name="muixeranga_tronc_id"/>
                                    <field name="actuacio_id"/>
                                    <field name="data"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="pinya" string="Pinyes">
                        <group name="pinya">
                            <field name="muixeranga_pinya_ids" nolabel="1">
                                <tree string="Pinya de muixeranga">
                                    <field name="name"/>
                                    <field name="rengle"/>
                                    <field name="posicio_id"/>
                                    <field name="muixeranga_pinya_id"/>
                                    <field name="actuacio_id"/>
                                    <field name="data"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="actuacions" string="Actuacions">
                        <group name="actuacions">
                            <field name="membre_actuacio_ids" nolabel="1">
                                <tree string="Actuacions">
                                    <field name="actuacio_id"/>
                                    <field name="count_actuacio"/>
                                    <field name="count_actuacio_pinya_2"/>
                                    <field name="count_actuacio_tronc_2"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_employee_membre_skill_form" model="ir.ui.view">
            <field name="name">hr.employee.membre.skill.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_skill.view_employee_skill_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="replace"/>
            </field>
        </record>

        <record id="hr_employee_membre_tree" model="ir.ui.view">
            <field name="name">hr.employee.membre.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Employees" decoration-bf="message_needaction==True">
                    <field name="name"/>
                    <field name="mesos_inscrit"/>
                    <field name="count_3stars"/>
                    <field name="count_2stars"/>
                    <field name="count_1stars"/>
                    <field name="count_total"/>
                    <field name="count_sismesos"/>
                    <field name="alsada_cap" string="Alçada (cm)"/>
                    <field name="alsada_muscle" invisible="1"/>
                    <field name="alsada_bras" invisible="1"/>
                    <field name="pes" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_membre_search" model="ir.ui.view">
            <field name="name">hr.employee.membre.search</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employees">
                    <field name="name"/>
                    <field name="count_3stars"/>
                    <field name="count_2stars"/>
                    <field name="count_1stars"/>
                    <field name="count_total"/>
                    <field name="count_sismesos"/>
                    <field name="alsada_cap"/>
                    <field name="alsada_muscle"/>
                    <field name="alsada_bras"/>
                    <separator/>
                    <filter string="Habilitats expertes" name="count_3stars" domain="[('count_3stars', '!=', '')]"/>
                    <filter string="Habilitats avançades" name="count_2stars" domain="[('count_2stars', '!=', '')]"/>
                    <filter string="Habilitats mitjanes" name="count_1stars" domain="[('count_1stars', '!=', '')]"/>
                    <separator/>
                    <filter string="Alçada 190+" name="alsada_190" domain="[('alsada_cap', '&gt;=', 190)]"/>
                    <filter string="Alçada 180, 190" name="alsada_180" domain="[('alsada_cap', '&gt;=', 180), ('alsada_cap', '&lt;', 190)]"/>
                    <filter string="Alçada 170, 180" name="alsada_170" domain="[('alsada_cap', '&gt;=', 170), ('alsada_cap', '&lt;', 180)]"/>
                    <filter string="Alçada 160, 170" name="alsada_160" domain="[('alsada_cap', '&gt;=', 160), ('alsada_cap', '&lt;', 170)]"/>
                    <filter string="Alçada 159-" name="alsada_150" domain="[('alsada_cap', '&lt;', 160)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Habilitats expertes" name="group_count_3stars" domain="[]" context="{'group_by':'count_3stars'}"/>
                        <filter string="Habilitats avançades" name="group_count_2stars" domain="[]" context="{'group_by':'count_2stars'}"/>
                        <filter string="Habilitats mitjanes" name="group_count_1stars" domain="[]" context="{'group_by':'count_1stars'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_employee_actuacio_tree" model="ir.ui.view">
            <field name="name">hr.employee.actuacio.tree</field>
            <field name="model">hr.employee.actuacio</field>
            <field name="arch" type="xml">
                <tree string="Membres">
                    <field name="name"/>
                    <field name="count_actuacio_pinya"/>
                    <field name="count_actuacio_tronc"/>
                    <field name="count_actuacio"/>
                    <field name="count_actuacio_pinya_2"/>
                    <field name="count_actuacio_tronc_2"/>
                    <field name="count_3stars"/>
                    <field name="count_2stars"/>
                    <field name="count_1stars"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_actuacio_form" model="ir.ui.view">
            <field name="name">hr.employee.actuacio.form</field>
            <field name="model">hr.employee.actuacio</field>
            <field name="arch" type="xml">
                <form string="Membres">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="employee_id"/>
                                <field name="actuacio_id"/>
                                <field name="count_actuacio_pinya"/>
                                <field name="count_actuacio_tronc"/>
                                <field name="count_actuacio"/>
                                <field name="count_actuacio_pinya_2"/>
                                <field name="count_actuacio_tronc_2"/>
                            </group>
                            <group>
                                <field name="count_3stars"/>
                                <field name="count_2stars"/>
                                <field name="count_1stars"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

<odoo>
    <data>

        <record id="view_employee_membre_form" model="ir.ui.view">
            <field name="name">hr.employee.membre.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <group>
                        <group name="informacio">
                            <field name="muixeranguera"/>
                            <field name="data_inscripcio"/>
                            <field name="mesos_inscrit"/>
                            <field name="altres_noms"/>
                        </group>
                        <group name="mesures">
                            <label for="alsada_cap" string="Alçada"/>
                            <div>
                                <field name="alsada_cap" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="alsada_muscle" string="Alçada del muscle"/>
                            <div>
                                <field name="alsada_muscle" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="alsada_bras" string="Alçada dels braços"/>
                            <div>
                                <field name="alsada_bras" nolabel="1" class="oe_inline"/> cm
                            </div>
                            <label for="pes" string="Pes"/>
                            <div>
                                <field name="pes" nolabel="1" class="oe_inline"/> kg
                            </div>
                        </group>
                        <field name="notes" string="Altra informació" placeholder="Altra informació..."/>
                    </group>
                </field>
                <page name="public" position="before">
                    <page name="habilitats" string="Habilitats">
                        <group name="habilitats">
                            <field name="employee_skill_ids" nolabel="1">
                                <tree>
                                    <field name="skill_id"/>
                                    <field name="description"/>
                                    <field name="level" widget="priority"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="posicio_ids" nolabel="1"/>
                        </group>
                    </page>
                    <page name="tronc" string="Troncs">
                       <group name="tronc">
                            <field name="muixeranga_tronc_ids" nolabel="1">
                                <tree string="Tronc de muixeranga">
                                    <field name="name"/>
                                    <field name="posicio_id"/>
                                    <field name="muixeranga_tronc_id"/>
                                    <field name="actuacio_id"/>
                                    <field name="data"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="pinya" string="Pinyes">
                        <group name="pinya">
                            <field name="muixeranga_pinya_ids" nolabel="1">
                                <tree string="Pinya de muixeranga">
                                    <field name="name"/>
                                    <field name="rengle"/>
                                    <field name="posicio_id"/>
                                    <field name="muixeranga_pinya_id"/>
                                    <field name="actuacio_id"/>
                                    <field name="data"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_employee_skill_form" model="ir.ui.view">
            <field name="name">hr.employee.skill.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_skill.view_employee_skill_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="replace"/>
            </field>
        </record>

        <record id="view_employee_membre_tree" model="ir.ui.view">
            <field name="name">hr.employee.membre.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Employees" decoration-bf="message_needaction==True">
                        <field name="name"/>
                        <field name="data_inscripcio"/>
                        <field name="employee_skill_ids" widget="many2many_tags"/>
                        <!--
                        <field name="pinya_ids" widget="many2many_tags"/>
                        <field name="tronc_ids" widget="many2many_tags"/>-->
                        <field name="message_needaction" invisible="1"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="view_skill_tree" model="ir.ui.view">
            <field name="name">hr.skill.tree</field>
            <field name="model">hr.skill</field>
            <field name="inherit_id" ref="hr_skill.view_hr_skill_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="before">
                    <field name="tipus"/>
                </field>
            </field>
        </record>

        <record id="view_skill_form" model="ir.ui.view">
            <field name="name">hr.skill.form</field>
            <field name="model">hr.skill</field>
            <field name="inherit_id" ref="hr_skill.view_skill_form"/>
            <field name="arch" type="xml">
                <field name="description" position="before">
                    <field name="tipus"/>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="child_ids" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="child_ids" position="after">
                    <field name="employee_skill_ids">
                        <tree default_order="level desc">
                            <field name="employee_id"/>
                            <field name="level" widget="priority"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>
    </data>
</odoo>

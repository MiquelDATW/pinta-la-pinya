<odoo>
    <data>

        <record id="view_tronc_form" model="ir.ui.view">
            <field name="name">pinya.tronc.form</field>
            <field name="model">pinya.tronc</field>
            <field name="arch" type="xml">
                <form string="Tronc">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                        </div>
                        <group>
                            <field name="pis"/>
                            <field name="tipus"/>
                            <field name="persones"/>
                            <field name="muixeranga_id"/>
                            <field name="plantilla" invisible="0"/>
                            <field name="membres_ids"
                                   attrs="{'invisible': [('plantilla', '=', True)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tronc_tree" model="ir.ui.view">
            <field name="name">pinya.tronc.tree</field>
            <field name="model">pinya.tronc</field>
            <field name="arch" type="xml">
                <tree string="Tronc">
                    <field name="pis"/>
                    <field name="tipus"/>
                    <field name="persones"/>
                    <field name="muixeranga_id"/>
                    <field name="membres_ids"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

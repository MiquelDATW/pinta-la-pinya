<odoo>
    <data>
        <record id="view_tronc_form" model="ir.ui.view">
            <field name="name">pinya.tronc.form</field>
            <field name="model">pinya.tronc</field>
            <field name="arch" type="xml">
                <form string="Tronc">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                        </div>
                        <group name="tronc">
                            <field name="muixeranga_id" invisible="1"/>
                            <field name="plantilla" invisible="1"/>
                            <field name="pis"/>
                            <field name="tipus"/>
                            <field name="persones"/>
                            <field name="present_ids" readonly="1"
                                   attrs="{'invisible': [('plantilla', '=', True)]}"/>
                            <field name="membre_ids" readonly="1"
                                   attrs="{'invisible': [('plantilla', '=', True)]}"/>
                        </group>
                        <group name="posicio" string="Posicions">
                            <field name="posicio_ids" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tronc_tree" model="ir.ui.view">
            <field name="name">pinya.tronc.tree</field>
            <field name="model">pinya.tronc</field>
            <field name="arch" type="xml">
                <tree string="Tronc">
                    <field name="pis"/>
                    <field name="tipus"/>
                    <field name="persones"/>
                    <field name="posicio_ids" widget="many2many_tags"/>
                    <field name="membre_ids"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

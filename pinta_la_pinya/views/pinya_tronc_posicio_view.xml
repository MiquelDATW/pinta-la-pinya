<odoo>
    <data>

        <record id="view_tronc_posicio_form" model="ir.ui.view">
            <field name="name">pinya.tronc.posicio.form</field>
            <field name="model">pinya.tronc.posicio</field>
            <field name="arch" type="xml">
                <form string="Posició">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group name="posicio">
                            <field name="tronc_id" invisible="1"/>
                            <field name="plantilla" invisible="1"/>
                            <field name="pis"/>
                            <field name="posicio_id"/>
                            <field name="tronc_id"/>
                            <field name="muixeranga_id"/>
                            <field name="actuacio_id"/>
                            <field name="data"/>
                            <field name="membre_id"
                                   domain="[('posicio_ids', '=', posicio_id), ('id', 'in', membre_ids)]"
                                   attrs="{'invisible': [('plantilla', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="membre_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tronc_posicio_tree" model="ir.ui.view">
            <field name="name">pinya.tronc.posicio.tree</field>
            <field name="model">pinya.tronc.posicio</field>
            <field name="arch" type="xml">
                <tree string="Posició">
                    <field name="pis"/>
                    <field name="posicio_id"/>
                    <field name="membre_id"/>
                    <field name="tronc_id"/>
                    <field name="muixeranga_id"/>
                    <field name="actuacio_id"/>
                    <field name="data"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

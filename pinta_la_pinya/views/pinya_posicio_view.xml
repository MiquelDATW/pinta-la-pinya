<odoo>
    <data>

        <record id="view_posicio_form" model="ir.ui.view">
            <field name="name">pinya.posicio.form</field>
            <field name="model">pinya.posicio</field>
            <field name="arch" type="xml">
                <form string="Posició">
                    <sheet>
                        <group name="posicio">
                            <field name="name"/>
                            <field name="tipus"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_posicio_tree" model="ir.ui.view">
            <field name="name">pinya.posicio.tree</field>
            <field name="model">pinya.posicio</field>
            <field name="arch" type="xml">
                <tree string="Posició">
                    <field name="name"/>
                    <field name="tipus"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

            <field name="name">pinya.muixeranga.pinya.tree.all</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <tree string="Pinya de muixeranga"
                      decoration-muted="muixeranga_state=='draft' or muixeranga_pinya_id==False"
                      decoration-warning="muixeranga_state=='intent' and muixeranga_pinya_id!=False"
                      decoration-success="muixeranga_state=='ready' and muixeranga_pinya_id!=False"
                      decoration-danger="muixeranga_state in ['caigut', 'cancel'] and muixeranga_pinya_id!=False">
                    <field name="data" widget="date"/>
                    <field name="actuacio_id"/>
                    <field name="muixeranga_pinya_id"/>
                    <field name="muixeranga_state"/>
                    <field name="plantilla_id"/>
                    <field name="cordo"/>
                    <field name="rengle"/>
                    <field name="posicio_id"/>
                    <field name="tecnica" widget="priority"/>
                    <field name="membre_pinya_id"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_pinya_tree_selected" model="ir.ui.view">
            <field name="name">pinya.muixeranga.pinya.tree.selected</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <tree create="0" editable="bottom"
                      decoration-muted="membre_pinya_id == False"
                      string="Pinya de muixeranga">
                    <field name="cordo" readonly="1"/>
                    <field name="rengle" readonly="1"/>
                    <field name="posicio_id" readonly="1"/>
                    <field name="tecnica" widget="priority" readonly="1"/>
                    <field name="membre_pinya_id" readonly="1"/>
                    <field name="membre_pinya_level_id"
                           options="{'no_create_edit': True}"
                           attrs="{'readonly': [('muixeranga_state', '!=', 'draft')]}"
                           domain="[('id', 'in', recomanats_ids)]"/>
                    <field name="muixeranga_pinya_id" invisible="1"/>
                    <field name="recomanats_ids" invisible="1"/>
                    <field name="muixeranga_state" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_pinya_search" model="ir.ui.view">
            <field name="name">pinya.muixeranga.pinya.search</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <search string="Pinya de muixeranga">
                    <field name="actuacio_id"/>
                    <field name="muixeranga_pinya_id"/>
                    <field name="muixeranga_state"/>
                    <field name="plantilla_id"/>
                    <field name="cordo"/>
                    <field name="rengle"/>
                    <field name="posicio_id"/>
                    <field name="tecnica" widget="priority"/>
                    <field name="membre_pinya_id"/>
                    <separator/>
                    <filter string="Membre no establert" name="no_establert" domain="[('membre_pinya_id', '=', False)]"/>
                    <filter string="Membre establert" name="establert" domain="[('membre_pinya_id', '!=', False)]"/>
                    <separator/>
                    <filter string="Cancel·lat" name="cancel" domain="[('muixeranga_state', '=', 'cancel')]"/>
                    <filter string="Esborrany" name="esborrany" domain="[('muixeranga_state', '=', 'draft')]"/>
                    <filter string="Preparat" name="preparat" domain="[('muixeranga_state', '=', 'ready')]"/>
                    <filter string="Descarregat" name="descarregat" domain="[('muixeranga_state', '=', 'descarregat')]"/>
                    <filter string="Intent" name="intent" domain="[('muixeranga_state', '=', 'intent')]"/>
                    <filter string="Caigut" name="caigut" domain="[('muixeranga_state', '=', 'caigut')]"/>
                    <separator/>
                    <filter string="0 cordó" name="0_cordo" domain="[('cordo', '=', '0')]"/>
                    <filter string="1r cordó" name="1r_cordo" domain="[('cordo', '=', '1')]"/>
                    <filter string="2n cordó" name="2n_cordo" domain="[('cordo', '=', '2')]"/>
                    <filter string="3r cordó" name="3r_cordo" domain="[('cordo', '=', '3')]"/>
                    <filter string="4t cordó" name="4t_cordo" domain="[('cordo', '=', '4')]"/>
                    <filter string="5é cordó" name="5e_cordo" domain="[('cordo', '=', '5')]"/>
                    <filter string="6é cordó" name="6e_cordo" domain="[('cordo', '=', '6')]"/>
                    <separator/>
                    <filter string="Experte ⭐⭐⭐" name="tecnica_3" domain="[('tecnica', '=', '3')]"/>
                    <filter string="Avançat ⭐⭐" name="tecnica_2" domain="[('tecnica', '=', '2')]"/>
                    <filter string="Intermedi ⭐" name="tecnica_1" domain="[('tecnica', '=', '1')]"/>
                    <filter string="Inicial" name="tecnica_0" domain="[('tecnica', '=', '0')]"/>
                    <separator/>
                    <filter string="Any anterior" name="previous_year" domain="[('data', '&gt;=', (datetime.date.today() - relativedelta(months=12)).strftime('%Y-01-01')), ('data', '&lt;=', (datetime.date.today() - relativedelta(months=12)).strftime('%Y-12-31'))]"/>
                    <filter string="12 mesos anteriors" name="previous_12_months" domain="[('data', '&gt;=', (datetime.date.today() - relativedelta(months=12)).strftime('%Y-%m-01')), ('data', '&lt;', datetime.date.today().strftime('%Y-%m-01'))]"/>
                    <filter string="Mes anterior" name="previous_month" domain="[('data', '&gt;=', (datetime.date.today() - relativedelta(months=1)).strftime('%Y-%m-01')), ('data', '&lt;', datetime.date.today().strftime('%Y-%m-01'))]"/>
                    <filter string="Any actual" name="current_year" domain="[('data', '&gt;=', datetime.date.today().strftime('%Y-01-01'))]"/>
                    <filter string="Mes actual" name="current_month" domain="[('data', '&gt;=', datetime.date.today().strftime('%Y-%m-01'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_actuacio" string="Actuació" domain="[]" context="{'group_by':'actuacio_id'}"/>
                        <filter name="group_muixeranga_pinya" string="Figura" domain="[]" context="{'group_by':'muixeranga_pinya_id'}"/>
                        <filter name="group_muixeranga_state" string="Estat muixeranga" domain="[]" context="{'group_by':'muixeranga_state'}"/>
                        <filter name="group_plantilla" string="Plantilla" domain="[]" context="{'group_by':'plantilla_id'}"/>
                        <filter name="group_data" string="Data" domain="[]" context="{'group_by':'data'}"/>
                        <filter name="group_cordo" string="Cordó" domain="[]" context="{'group_by':'cordo'}"/>
                        <filter name="group_rengle" string="Rengle" domain="[]" context="{'group_by':'rengle'}"/>
                        <filter name="group_posicio" string="Posició" domain="[]" context="{'group_by':'posicio_id'}"/>
                        <filter name="group_tecnica" string="Tècnica" domain="[]" context="{'group_by':'tecnica'}"/>
                        <filter name="group_membre_pinya" string="Membre Pinya" domain="[]" context="{'group_by':'membre_pinya_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>

<odoo>
    <data>
        <record id="view_muixeranga_form" model="ir.ui.view">
            <field name="name">pinya.muixeranga.form</field>
            <field name="model">pinya.muixeranga</field>
            <field name="arch" type="xml">
                <form string="Muixerangues">
                    <header>
                        <button string="Descarregat" name="action_descarregat"
                                attrs="{'invisible': ['|', ('actuacio_state', '!=', 'done'), ('state', '!=', 'ready')]}"
                                type="object" class="btn-success"/>
                        <button string="Intent" name="action_intent"
                                attrs="{'invisible': ['|', ('actuacio_state', '!=', 'done'), ('state', '!=', 'ready')]}"
                                type="object" class="btn-warning"/>
                        <button string="Caigut" name="action_caigut"
                                attrs="{'invisible': ['|', ('actuacio_state', '!=', 'done'), ('state', '!=', 'ready')]}"
                                type="object" class="btn-danger"/>
                        <button string="Cancel·lat" name="action_cancel"
                                attrs="{'invisible': [('state', 'not in', ['draft', 'ready'])]}"
                                context="{'action_cancel': 1}"
                                type="object" class="btn-danger"/>
                        <button string="Esborrany" name="action_draft"
                                attrs="{'invisible': ['|', ('actuacio_state', '=', 'done'), ('state', 'not in', ['cancel', 'ready'])]}"
                                context="{'action_draft': 1}"
                                type="object" class="btn-warning"/>
                        <button class="oe_highlight" type="object"
                                name="calcular_muixeranga"
                                attrs="{'invisible': ['|', ('membre_count', '=', 0), ('state', '!=', 'draft')]}"
                                string="Calcular muixeranga"/>
                        <button class="oe_highlight" type="object"
                                name="reset_muixeranga"
                                attrs="{'invisible': ['|', ('membre_count', '=', 0), ('state', '!=', 'draft')]}"
                                string="Reset muixeranga"/>
                        <field name="state" widget="statusbar" statusbar_visible="descarregat"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="base.group_user"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                            <button class="oe_stat_button" type="object"
                                    name="tronc_muixeranga" icon="fas fa-cog"
                                    attrs="{'invisible': [('membre_count', '=', 0)]}">
                                <field name="tronc_count2" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object"
                                    name="pinya_muixeranga" icon="fas fa-users"
                                    attrs="{'invisible': ['|', ('membre_count', '=', 0), ('neta', '=', True)]}">
                                <field name="pinya_count2" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom de la figura" required="True"/>
                            </h1>
                        </div>
                        <group name="muixeranga">
                            <group name="info" string="Info">
                                <field name="pisos"/>
                                <field name="tipus"/>
                                <field name="neta"
                                       attrs="{'invisible': [('neta', '=', False)]}"/>
                                <field name="plantilla_id"/>
                                <field name="actuacio_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="temporada_id" readonly="1"/>
                                <field name="actuacio_state" invisible="1"/>
                            </group>
                            <group name="persones" string="Persones">
                                <field name="tronc_count"/>
                                <field name="pinya_count"/>
                                <field name="total_count"/>
                            </group>
                        </group>
                        <group name="notes" string="Altra informació">
                            <field name="notes" placeholder="Altra informació..."/>
                        </group>
                        <notebook>
                            <page name="tronc" string="Tronc">
                                <field name="tronc_line_ids" nolabel="1">
                                    <tree string="Tronc de muixeranga"
                                          decoration-muted="membre_tronc_id == False"
                                          create="false" edit="false" delete="false">
                                        <field name="pis"/>
                                        <field name="posicio_id"/>
                                        <field name="tecnica" widget="priority" readonly="1"/>
                                        <field name="membre_tronc_id"/>
                                        <field name="muixeranga_tronc_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="pinya" string="Pinya"
                                  attrs="{'invisible': [('neta', '=', True)]}">
                                <field name="pinya_line_ids" nolabel="1">
                                    <tree string="Pinya de muixeranga"
                                          decoration-muted="membre_pinya_id == False"
                                          create="false" edit="false" delete="false">
                                        <field name="cordo"/>
                                        <field name="rengle"/>
                                        <field name="posicio_id"/>
                                        <field name="tecnica" widget="priority" readonly="1"/>
                                        <field name="membre_pinya_id"/>
                                        <field name="muixeranga_pinya_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="altra" string="Altra Informació">
                                <group>
                                    <group name="altra" string="Altra Informació">
                                        <field name="mestra_id"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids), ('membre_at', '=', True)]"/>
                                        <field name="passadora_id"
                                               attrs="{'invisible': [('tipus', '=', 'aixecat')]}"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"/>
                                        <field name="estiradora_id"
                                               attrs="{'invisible': [('tipus', '!=', 'aixecat')]}"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"/>
                                        <field name="resp_xicalla_ids" string="Resp. xicalla"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"
                                               widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page name="membres" string="Membres">
                                <group name="membres" string="Membres">
                                    <field name="membre_count"/>
                                </group>
                            </page>
                            <page name="lliures" string="Lliures"
                                  attrs="{'invisible': [('membre_count', '=', 0)]}">
                                <group name="lliures" string="Lliures">
                                    <field name="lliure_count"/>
                                </group>
                                <field name="lliure_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


<odoo>
    <data>

        <record id="view_muixeranga_form" model="ir.ui.view">
            <field name="name">pinya.muixeranga.form</field>
            <field name="model">pinya.muixeranga</field>
            <field name="arch" type="xml">
                <form string="Muixerangues">
                    <header>
                        <!--
                        <button string="Confirm" name="action_budget_confirm" states="draft" type="object" class="oe_highlight"/>-->
                        <field name="estat" widget="statusbar" statusbar_visible="desca,intent,fail"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="calcular_muixeranga" icon="fas fa-calculator"
                                    string="Calcular muixeranga"/>
                            <button class="oe_stat_button" type="object"
                                    name="tronc_muixeranga" icon="fas fa-cog"
                                    string="Tronc"/>
                            <button class="oe_stat_button" type="object"
                                    name="pinya_muixeranga" icon="fas fa-users"
                                    attrs="{'invisible': [('neta', '=', True)]}"
                                    string="Pinya"/>
                            <button name="toggle_active" type="object" groups="base.group_user"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom de la figura" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group name="principal">
                                <field name="pisos"/>
                                <field name="tipus"/>
                                <field name="neta"
                                       attrs="{'invisible': [('neta', '=', False)]}"/>
                                <field name="plantilla_id"/>
                                <field name="actuacio_id"/>
                            </group>
                            <group name="count" string="Membres">
                                <field name="tronc_count"/>
                                <field name="pinya_count"/>
                                <field name="total_count"/>
                            </group>
                            <field name="notes" placeholder="Altra informació..." colspan="4"/>
                        </group>
                        <notebook>
                            <page name="tronc" string="Tronc">
                                <field name="tronc_line_ids" nolabel="1">
                                    <tree string="Tronc de muixeranga"
                                          create="false" edit="false" delete="false">
                                        <field name="name"/>
                                        <field name="posicio_id"/>
                                        <field name="tecnica" widget="priority" readonly="1"/>
                                        <field name="membre_tronc_id"
                                               options="{'no_create_edit': True}"
                                               domain="[('muixeranguera', '=', True)]"/>
                                        <field name="muixeranga_tronc_id" invisible="1"/>
                                    </tree>
                                    <form string="Tronc de muixeranga">
                                        <group>
                                            <group name="muixeranga_tronc">
                                                <field name="name" readonly="1"/>
                                                <field name="posicio_id" readonly="1"/>
                                                <field name="tecnica" widget="priority" readonly="1"/>
                                                <field name="membre_tronc_id" readonly="1"/>
                                            </group>
                                            <group name="muixeranga_dades">
                                                <field name="muixeranga_tronc_id" readonly="1"/>
                                                <field name="actuacio_id" readonly="1"/>
                                                <field name="data" readonly="1"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="pinya" string="Pinya"
                                  attrs="{'invisible': [('neta', '=', True)]}">
                                <field name="pinya_line_ids" nolabel="1">
                                    <tree string="Pinya de muixeranga"
                                          create="false" edit="false" delete="false">
                                        <field name="name"/>
                                        <field name="rengle"/>
                                        <field name="posicio_id"/>
                                        <field name="tecnica" widget="priority" readonly="1"/>
                                        <field name="membre_pinya_id"
                                               options="{'no_create_edit': True}"
                                               domain="[('muixeranguera', '=', True)]"/>
                                        <field name="muixeranga_pinya_id" invisible="1"/>
                                    </tree>
                                    <form string="Pinya de muixeranga">
                                        <group>
                                            <group name="muixeranga_pinya">
                                                <field name="name" readonly="1"/>
                                                <field name="rengle" readonly="1"/>
                                                <field name="posicio_id" readonly="1"/>
                                                <field name="tecnica" widget="priority" readonly="1"/>
                                                <field name="membre_pinya_id" readonly="1"/>
                                            </group>
                                            <group name="muixeranga_dades">
                                                <field name="muixeranga_pinya_id" readonly="1"/>
                                                <field name="actuacio_id" readonly="1"/>
                                                <field name="data" readonly="1"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="altra" string="Altra Informació">
                                <group>
                                    <group name="altra" string="Altra Informació">
                                        <field name="mestra_id"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"/>
                                        <field name="passadora_id"
                                               attrs="{'invisible': [('tipus', '=', 'aixecat')]}"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"/>
                                        <field name="estiradora_id"
                                               attrs="{'invisible': [('tipus', '!=', 'aixecat')]}"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"/>
                                        <field name="resp_xicalla_ids" string="Resp. xicalla"
                                               options="{'no_create_edit': True}"
                                               domain="[('id', 'in', lliure_ids)]"
                                               widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page name="membres" string="Membres">
                                <group name="membres" string="Membres">
                                    <field name="membre_count"/>
                                </group>
                                <field name="membre_ids" nolabel="1"/>
                            </page>
                            <page name="lliures" string="Lliures">
                                <group name="lliures" string="Lliures">
                                    <field name="lliure_count"/>
                                </group>
                                <field name="lliure_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_muixeranga_tree" model="ir.ui.view">
            <field name="name">pinya.muixeranga.tree</field>
            <field name="model">pinya.muixeranga</field>
            <field name="arch" type="xml">
                <tree string="Muixerangues">
                    <field name="name"/>
                    <field name="actuacio_id"/>
                    <field name="estat"/>
                    <field name="tipus"/>
                    <field name="pisos"/>
                    <field name="cordons"/>
                    <field name="tronc_count"/>
                    <field name="pinya_count"/>
                    <field name="total_count"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_tronc_form" model="ir.ui.view">
            <field name="name">pinya.muixeranga.tronc.form</field>
            <field name="model">pinya.muixeranga.tronc</field>
            <field name="arch" type="xml">
                <form string="Tronc de muixeranga">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                            </h1>
                        </div>
                        <group>
                            <group name="muixeranga_tronc">
                                <field name="name"/>
                                <field name="posicio_id"/>
                                <field name="tecnica" widget="priority"/>
                                <field name="membre_tronc_id"
                                       options="{'no_create_edit': True}"
                                       domain="[('muixeranguera', '=', True)]"/>
                            </group>
                            <group name="muixeranga_dades">
                                <field name="muixeranga_tronc_id"/>
                                <field name="actuacio_id"/>
                                <field name="data"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_muixeranga_tronc_tree_all" model="ir.ui.view">
            <field name="name">pinya.muixeranga.tronc.tree.all</field>
            <field name="model">pinya.muixeranga.tronc</field>
            <field name="arch" type="xml">
                <tree string="Tronc de muixeranga">
                    <field name="data"/>
                    <field name="actuacio_id"/>
                    <field name="muixeranga_tronc_id"/>
                    <field name="name"/>
                    <field name="posicio_id"/>
                    <field name="tecnica" widget="priority"/>
                    <field name="membre_tronc_id"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_tronc_tree_selected" model="ir.ui.view">
            <field name="name">pinya.muixeranga.tronc.tree.selected</field>
            <field name="model">pinya.muixeranga.tronc</field>
            <field name="arch" type="xml">
                <tree create="0" editable="bottom" string="Tronc de muixeranga">
                    <field name="name" readonly="1"/>
                    <field name="posicio_id" readonly="1"/>
                    <field name="tecnica" widget="priority" readonly="1"/>
                    <field name="membre_tronc_id" readonly="1"/>
                    <field name="membre_tronc_level_id"
                           options="{'no_create_edit': True}"
                           domain="[('id', 'in', recomanats_ids)]"/>
                    <field name="muixeranga_tronc_id" invisible="1"/>
                    <field name="recomanats_ids" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_pinya_form" model="ir.ui.view">
            <field name="name">pinya.muixeranga.pinya.form</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <form string="Pinya de muixeranga">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                            </h1>
                        </div>
                        <group>
                            <group name="muixeranga_pinya">
                                <field name="name"/>
                                <field name="rengle" readonly="1"/>
                                <field name="posicio_id"/>
                                <field name="tecnica" widget="priority"/>
                                <field name="membre_pinya_id"
                                       options="{'no_create_edit': True}"
                                       domain="[('muixeranguera', '=', True)]"/>
                            </group>
                            <group name="muixeranga_dades">
                                <field name="muixeranga_pinya_id"/>
                                <field name="actuacio_id"/>
                                <field name="data"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_muixeranga_pinya_tree_all" model="ir.ui.view">
            <field name="name">pinya.muixeranga.pinya.tree.all</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <tree string="Pinya de muixeranga">
                    <field name="data"/>
                    <field name="actuacio_id"/>
                    <field name="muixeranga_pinya_id"/>
                    <field name="name"/>
                    <field name="rengle"/>
                    <field name="posicio_id"/>
                    <field name="tecnica" widget="priority"/>
                    <field name="membre_pinya_id"/>
                </tree>
            </field>
        </record>

        <record id="view_muixeranga_pinya_tree_selected" model="ir.ui.view">
            <field name="name">pinya.muixeranga.pinya.tree.selected</field>
            <field name="model">pinya.muixeranga.pinya</field>
            <field name="arch" type="xml">
                <tree create="0" editable="bottom" string="Pinya de muixeranga">
                    <field name="name" readonly="1"/>
                    <field name="rengle" readonly="1"/>
                    <field name="posicio_id" readonly="1"/>
                    <field name="tecnica" widget="priority" readonly="1"/>
                    <field name="membre_pinya_id" readonly="1"/>
                    <field name="membre_pinya_level_id"
                           options="{'no_create_edit': True}"
                           domain="[('id', 'in', recomanats_ids)]"/>
                    <field name="muixeranga_pinya_id" invisible="1"/>
                    <field name="recomanats_ids" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

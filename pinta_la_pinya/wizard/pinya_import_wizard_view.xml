<odoo>
    <data>
        <record id="pinya_import_wizard_form_view" model="ir.ui.view">
            <field name="name">pinya.import.wizard.form.view</field>
            <field name="model">pinya.import.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="file_data" required="True"/>
                            <field name="file_type" widget="radio"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Importar" name="import_pinya_btn" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="pinya_muixeranga_wizard_form_view" model="ir.ui.view">
            <field name="name">pinya.muixeranga.wizard.form.view</field>
            <field name="model">pinya.muixeranga.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="lines" nolabel="1">
                                <tree editable="bottom">
                                    <field name="muixeranga_id"
                                           domain="[('plantilla', '=', True)]" options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Afegir" name="afegir_figures_btn" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
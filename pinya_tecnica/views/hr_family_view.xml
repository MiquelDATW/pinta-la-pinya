<odoo>
    <data>
        <record id="view_employee_family_form" model="ir.ui.view">
            <field name="name">hr.employee.family.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']" position="after">
                    <page name="familia" string="Informació personal">
                        <group>
                            <group name="status" string="Estat">
                                <field name="gender"/>
                                <field name="marital"/>
                            </group>
                            <group name="birth_age" string="Edat">
                                <field name="birthday"/>
                                <field name="edat"/>
                            </group>
                        </group>
                        <group name="familia" string="Família">
                            <field name="family_ids" context="{'employee_id': id}" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_hr_employee_family_form" model="ir.ui.view">
            <field name="name">hr.employee.family.form</field>
            <field name="model">hr.employee.family</field>
            <field name="arch" type="xml">
                <form string="Membres">
                    <header/>
                    <sheet>
                        <group>
                            <group name="family" string="Família">
                                <field name="name" invisible="1"/>
                                <field name="is_relation"/>
                                <field name="employee_id" options="{'no_create_edit': True}"/>
                                <field name="family"/>
                                <field name="relation_name"
                                       attrs="{'invisible': [('is_relation', '=', True)]}"/>
                                <field name="relation_id" options="{'no_create_edit': True}"
                                       attrs="{'invisible': [('is_relation', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="inverse_family" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_family_tree" model="ir.ui.view">
            <field name="name">hr.employee.family.tree</field>
            <field name="model">hr.employee.family</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" invisible="1"/>
                    <field name="employee_id"/>
                    <field name="family"/>
                    <field name="relation_name"/>
                </tree>
            </field>
        </record>


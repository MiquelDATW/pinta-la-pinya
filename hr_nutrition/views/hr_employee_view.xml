<odoo>
    <data>
        <record id="view_hr_employee_nutrition_form" model="ir.ui.view">
            <field name="name">hr.employee.nutrition.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="before">
                    <page name="nutrition" string="Health &amp; Nutrition">
                        <group name="nutrition">
                            <group name="height_and_weight" string="Height and Weight">
                                <field name="height" string="Height (cm)" readonly="1"/>
                                <field name="weight" string="Weight (kg)" readonly="1"/>
                                <field name="bmi" string="BMI (kg/mÂ²)" readonly="1"/>
                                <field name="bmi_type" readonly="1"/>
                                <field name="anthropometry_id" invisible="1"/>
                                <div>
                                    <button string="Update Weight &amp; Height" name="anthropometry_new" type="object" class="btn-primary"/>
                                </div>
                                <div>
                                    <button string="Weight &amp; Height history" name="anthropometry_history" type="object"/>
                                </div>
                            </group>
                            <group name="other_info" string="Other info">
                                <field name="activity_level"/>
                                <field name="weight_goal"/>
                                <field name="nutrition_diet_id"/>
                            </group>
                            <group name="allergen" string="Allergens">
                                <field name="nutrition_allergen_ids" nolabel="0"
                                       widget="many2many_tags"/>
                            </group>
                            <group name="exclusion" string="Exclusions">
                                <field name="nutrition_exclusion_ids" nolabel="0"
                                       widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

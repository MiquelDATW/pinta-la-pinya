<odoo>
    <data>
        <record id="view_hr_employee_nutrition_form" model="ir.ui.view">
            <field name="name">hr.employee.nutrition.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="before">
                    <page name="nutrition" string="Health &amp; Nutrition">
                        <group name="nutrition">
                            <group name="height_and_weight" string="Height and Weight">
                                <field name='height' string="Height (cm)"/>
                                <field name='weight' string="Weight (kg)"/>
                                <field name='bmi' string="BMI (kg/mÂ²)"/>
                            </group>
                            <group name="other_info" string="Other info">
                                <field name="activity_level"/>
                                <field name="weight_goal"/>
                                <field name="nutrition_diet_id"/>
                            </group>
                            <group name="allergen" string="Allergens">
                                <field name="nutrition_allergen_ids" nolabel="1"
                                       widget="many2many_tags"/>
                            </group>
                            <group name="exclusion" string="Exclusions">
                                <field name="nutrition_exclusion_ids" nolabel="1"
                                       widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

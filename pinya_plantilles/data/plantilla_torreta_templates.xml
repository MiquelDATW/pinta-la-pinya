        <record id="torreta_tronc_4" model="pinya.plantilla.line">
            <field name="name">4</field>
            <field name="tipus">tronc</field>
            <field name="posicio_ids" eval="[(6,0,[ref('xicalla_1_2star')])]"/>
        </record>

        <!-- Plantilla line (Pinyes) -->
        <record id="torreta_pinya_1" model="pinya.plantilla.line">
            <field name="name">1</field>
            <field name="rengles">2</field>
            <field name="tipus">pinya</field>
            <field name="posicio_ids" eval="[(6,0,[ref('vent_1_2star'), ref('mans_1_2star'), ref('pinyerista_2_2star'), ref('peu_2_1star')])]"/>
        </record>
        <record id="torreta_pinya_2" model="pinya.plantilla.line">
            <field name="name">2</field>
            <field name="rengles">2</field>
            <field name="tipus">pinya</field>
            <field name="posicio_ids" eval="[(6,0,[ref('vent_1_1star'), ref('mans_1_1star'), ref('lateral_2_1star')])]"/>
        </record>
        <record id="torreta_pinya_3" model="pinya.plantilla.line">
            <field name="name">3</field>
            <field name="rengles">2</field>
            <field name="tipus">pinya</field>
            <field name="posicio_ids" eval="[(6,0,[ref('vent_1_1star'), ref('mans_1_1star'), ref('lateral_2_1star'), ref('tap_4_1star')])]"/>
        </record>
        <record id="torreta_pinya_4" model="pinya.plantilla.line">
            <field name="name">4</field>
            <field name="rengles">2</field>
            <field name="tipus">pinya</field>
            <field name="posicio_ids" eval="[(6,0,[ref('pinyerista_4_1star'), ref('tap_4_1star')])]"/>

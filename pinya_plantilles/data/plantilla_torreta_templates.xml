        <record id="torreta_pinya_5" model="pinya.plantilla.line">
            <field name="name">5</field>
            <field name="rengles">2</field>
            <field name="tipus">pinya</field>
            <field name="posicio_ids" eval="[(6,0,[ref('pinyerista_4_1star'), ref('tap_4_1star')])]"/>
        </record>

        <!-- Plantilla -->
        <record id="torreta" model="pinya.plantilla">
            <field name="name">Torreta</field>
            <field name="pisos">4</field>
            <field name="tipus">desplega</field>
            <field name="neta">False</field>
            <field name="plantilla_line_ids" eval="[(6,0,[ref('torreta_tronc_1'), ref('torreta_tronc_2'), ref('torreta_tronc_3'), ref('torreta_tronc_4'), ref('torreta_pinya_1'), ref('torreta_pinya_2'), ref('torreta_pinya_3'), ref('torreta_pinya_4'), ref('torreta_pinya_5')])]"/>

        <!-- Plantilla line (Troncs) -->
        <record id="torreta_tronc_1" model="pinya.plantilla.line">
            <field name="name">1</field>
            <field name="tipus">tronc</field>
            <field name="posicio_ids" eval="[(6,0,[ref('base_4_2star')])]"/>
        </record>
        <record id="torreta_tronc_2" model="pinya.plantilla.line">
            <field name="name">2</field>
            <field name="tipus">tronc</field>
            <field name="posicio_ids" eval="[(6,0,[ref('segones_2_2star')])]"/>

                 style="left: 670px;top: 153px;-webkit-transform:rotate(180deg);border: 1px solid black;"/>
            <div class="posicions" t-esc="vents[5].membre_pinya_id.nom_croquis"
                 style="left: 670px;top: 572px;-webkit-transform:rotate(0deg);border: 1px solid black;"/>

            <div class="posicions" t-esc="mans[0].membre_pinya_id.nom_croquis"
